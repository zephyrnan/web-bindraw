{
  "name": "web-collaborative-drawing",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "server": "node server.js",
    "server:full": "cd server && npm run dev",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "start:dev": "npm-run-all --parallel dev server",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.1",
    "koa": "^3.0.0",
    "koa-bodyparser": "^4.4.1",
    "router": "^2.2.0",
    "uuid": "^11.1.0",
    "vue": "^3.5.17",
    "vue-router": "^4.6.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.15.32",
    "@types/stats.js": "^0.17.4",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/ui": "^4.0.14",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "happy-dom": "^20.0.11",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.0.0",
    "stats.js": "^0.17.0",
    "typescript": "~5.8.0",
    "vite": "^6.3.5",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vitest": "^4.0.14",
    "vue-tsc": "^2.2.10"
  },
  "description": "Professional graphic editor with real-time collaboration support, built with Vue 3 + TypeScript + Canvas API",
  "keywords": ["canvas", "editor", "collaboration", "vue3", "typescript", "whiteboard", "graphics"],
